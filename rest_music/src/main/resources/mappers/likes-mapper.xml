<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwill.rest.repository.LikesDao">
    
    <!-- 좋아요 개수 확인 -->
    <select id="countLikes" resultType="Integer">
        select count(*)
        from likes
        where song_id = #{songId} and id = #{id}
    </select>

    <!-- 좋아요 추가 -->
    <insert id="insertLikes">
        insert into likes (song_id, id)
        values (#{songId}, #{id})
    </insert>

    <!-- 좋아요 삭제 -->
    <delete id="deleteLikes">
        delete from likes
        where song_id = #{songId} and id = #{id}
    </delete>

</mapper>


